---
import { Image } from 'astro:assets'

import { Button, Collapse, Icon } from 'astro-pure/user'
import PageLayout from '@/layouts/CommonPage.astro'
import ProjectSection from '@/components/projects/ProjectSection.astro'
import alipay from '@/assets/alipay-qrcode.jpg'
import KeyIcon from '@/assets/icons/key.svg'
import wechat from '@/assets/wechat-qrcode.jpg'
import ProjectCard from '@/components/home/ProjectCard.astro'

const headings = [
  { depth: 2, slug: 'opensource', text: 'OpenSource' },
    { depth: 2, slug: 'website', text: 'Website' }
]
---

<PageLayout title='Projects' {headings} view>
  <p>Github Activities:</p>
  <p>
    <Image
      src='https://ghchart.rshah.org/659eb9/SunXin121'
      alt='github activities'
      inferSize
      loading='lazy'
    />
  </p>


  <h2 id='opensource'>OpenSource</h2>
  <br />
  <ProjectSection
    projects={[
      {
        name: '🌅 Bing Wallpaper',
        description:
          '基于 Cloudflare Workers 自建 Bing 随机壁纸 API',
        links: [
          { type: 'github', href: 'https://github.com/SunXin121/bing_wallpaper' }
        ]
      },
      {
        name: '🧠 Pot-APP Qwen OCR 插件',
        description: '基于阿里云通义千问（Qwen）AI 的 OCR 文字识别 Pot 插件',
        links: [
          { type: 'github', href: 'https://github.com/SunXin121/pot-app-recognize-plugin-qwen-ocr' },
          { type: 'release', href: 'https://github.com/SunXin121/pot-app-recognize-plugin-qwen-ocr/releases' }
        ]
      }
    ]}
  />

  <h2 id='website'>Website</h2>
  <br />
  <div class='grid grid-cols-1 gap-3 sm:grid-cols-2'>
          <ProjectCard
            href='https://api.csun.site/'
            heading='SUN API'
            subheading='低价高性能的大模型 API 中转服务'
            imagePath='/src/assets/projects/sunapi.png'
          />
          <ProjectCard
            href='https://camlife.csun.site/'
            heading='CamLife'
            subheading='照片展示网站'
            imagePath='/src/assets/projects/camlife.png'
          />
    </div>
</PageLayout>
